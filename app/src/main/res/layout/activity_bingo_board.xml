<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".BingoBoard">
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="60dp">
        <TextView
            android:id="@+id/b_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/my_secondary"
            android:background="@drawable/rounded_corner"
            android:visibility="gone"
            android:text="B"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/i_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/my_secondary"
            android:text="I"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/n_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/my_secondary"
            android:text="N"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/g_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/my_secondary"
            android:text="G"
            android:background="@drawable/rounded_corner"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/o_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/my_secondary"
            android:text="O"
            android:background="@drawable/rounded_corner"/>
    </LinearLayout>
    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:numColumns="5"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:background="@drawable/rounded_corner_fill"
        android:padding="5dp"
        tools:listitem="@layout/grid_item_layout" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="40dp">
        <Button
            android:id="@+id/restart_btn"
            android:layout_width="1in"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/my_primary"
            android:padding="14dp"
            android:text="Restart"
            android:textSize="20sp"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/exit_btn"
            android:layout_width="1in"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/my_primary"
            android:padding="14dp"
            android:text="Exit"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
